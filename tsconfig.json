{
  
    "extends": "aegir/src/config/tsconfig.aegir.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
          "*": ["./types/*"]
        },
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "noImplicitThis": false,
        "noImplicitUseStrict": false,
        "allowJs": true
    },
    "include": [
      "types",
      "test", // remove this line if you don't want to type-check tests
      "src",
      "lib"
    ]
}
